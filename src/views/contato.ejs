<%- include('./includes/head.ejs') %>
  <%- include('./includes/nav.ejs') %>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center my-3">Contato</h1>
          <p class="text-center lead">Crie ou edite seu contato.</p>
        </div>

        <%- include('includes/messages.ejs') %>

          <form action=<%=contato._id ? `/contato/edit/${contato._id}` : "/contato/criar-contato" %> method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label for="nome">Nome</label>
              <input type="text" value="<%= contato.nome %>" class="form-control" id="nome" name="nome"
                placeholder="Nome">
            </div>
            <div class="form-group mt-3">
              <label for="sobrenome">Sobrenome</label>
              <input type="text" value="<%=contato.sobrenome %>" class="form-control" id="sobrenome" name="sobrenome"
                placeholder="Sobrenome">
            </div>
            <div class="form-group mt-3">
              <label for="email">Email</label>
              <input type="email" value="<%= contato.email %>" class="form-control" id="email" name="email"
                placeholder="Email">
            </div>
            <div class="form-group mt-3">
              <label for="telefone">Telefone</label>
              <input type="tel" value="<%= contato.telefone %>" class="form-control" id="telefone" name="telefone"
                placeholder="Telefone">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Salvar</button>
          </form>


          <div class="col-lg-2"></div>
      </div>
    </div>
    <%- include('./includes/footer.ejs')%>